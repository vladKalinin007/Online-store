@using System.Linq;

@model IEnumerable<Product>

<div class="container p-3">

    <div class="row d-flex justify-content-between">
        <div class="col-6">
            <h2 class="text-primary"> Product  lists </h2>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a asp-action="Upsert" class="btn btn-primary ml-auto d-flex align-items-center">
                <i class="fa fa-plus" aria-hidden="true"></i> &nbsp; Create new product
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-rounded table-hover" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Product  name
                    </th>
                    <th>
                        Price 
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                     <tr>
                         <td width="30%"> @obj.Name </td>
                         <td width="30%"> @obj.Price </td>
                         <td class="text-center">
                             <div class="w-75 btn-group" role="group">
                                 <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                     <i class="fa fa-pencil-square-o" aria-hidden="true"></i> &nbsp; Edit
                                 </a>
                                 <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                     <i class="fa fa-trash-o" aria-hidden="true"></i> &nbsp; Delete
                                 </a>
                             </div>
                         </td>
                     </tr>
                }
            </tbody>
        </table>
    }
        else
    {
            <p> No product found </p>
    }

</div>

<style>
    .table {
        box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        border-radius: 6px;
    }

    .table-hover tbody tr:hover td {
        background-color: #f5f5f5;
        transition: background-color 0.3s ease-in-out;
        box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }
    .btn-primary:hover {
        box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

</style>


